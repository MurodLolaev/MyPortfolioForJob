@model IEnumerable<Certificate>

<div class="container my-5">
    <h2 class="fw-bold text-primary mb-4"><i class="bi bi-award me-2"></i> Сертификаты</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var cert in Model)
        {
            <div class="col animate__animated animate__fadeInUp">
                <div class="card h-100 shadow-lg border-0 rounded-4">
                   @*  <img src="@cert.Image" class="card-img-top rounded-top-4" alt="Сертификат" style="height: 200px; object-fit: contain;" /> *@
                    @{
                        var ext = System.IO.Path.GetExtension(cert.Image)?.ToLower();
                    }
                    @if (ext == ".jpg" || ext == ".jpeg" || ext == ".png" || ext == ".webp")
                    {
                        <img src="@cert.Image" class="card-img-top rounded-top-4" alt="Сертификат" style="height: 200px; object-fit: cover;" />
                    }
                    else if (ext == ".pdf")
                    {
                        <iframe src="@cert.Image" style="width:100%; height:200px;" frameborder="0"></iframe>
                    }
                    else if (ext == ".doc" || ext == ".docx")
                    {
                        <iframe src="https://docs.google.com/gview?url=https://yourdomain.com@cert.Image&embedded=true" style="width:100%; height:200px;" frameborder="0"></iframe>
                    }
                    else
                    {
                        <img src="/images/file-icon.png" class="card-img-top rounded-top-4" alt="Файл" style="height: 200px; object-fit: contain;" />
                    }
                    <div class="card-body">
                        <h5 class="card-title text-primary">@cert.Name</h5>
                        <p class="card-text text-muted">Дата: @cert.CreatedAt.ToShortDateString()</p>
                        <a href="@cert.Image" target="_blank" class="btn btn-outline-primary btn-sm">
                            📄 Загрузить
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

   