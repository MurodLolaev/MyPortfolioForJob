@model IEnumerable<Project>
@{
    ViewData["Title"] = "Проекты";
}

<!-- 🌈 Центрированный заголовок -->
<div class="text-center my-5">
    <h2 class="fw-bold text-gradient"><i class="bi bi-search me-2"></i> Поиск по проектам</h2>
    <p class="text-muted">Найденные проекты по вашему запросу</p>
</div>

<hr />

@if (!Model.Any())
{
    <div class="text-center text-muted">
        <i class="bi bi-emoji-frown fs-1"></i>
        <p class="mt-3">Проекты не найдены.</p>
    </div>
}
else
{
    <div class="container">
        <div class="row justify-content-center row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var project in Model)
            {
                <div class="col animate__animated animate__fadeInUp">
                    <div class="card h-100 shadow-lg border-0 rounded-4 bg-glass">
                        <img src="@project.Image" class="card-img-top rounded-top-4" alt="Фото проекта" style="height: 200px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title text-primary">@project.Name</h5>
                            <p class="card-text text-muted">@project.Description</p>
                            <p>
                                <i class="bi bi-github me-1"></i>
                                <a href="@project.Link" target="_blank">@project.Link</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}